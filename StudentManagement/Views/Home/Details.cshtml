@{
    ViewBag.Title = "学生详情";
    var photoPath = "~/images/noimage.png";
    if (Model.Student.Photopath != null)
    {
        photoPath = "~/images/avatars/" + Model.Student.Photopath;
    }
}
@model HomeDatailsViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h3>@Model.PageTitle</h3>
    <div class="row justify-content-center m-3">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Student.Name</h1>
                </div>
                <div class="card-body text-center">
                    <img src="@photoPath" class="card-img-top imageThumbnail" alt="学生头像" asp-append-version="true" />
                    <h4>姓名：@Model.Student.Name</h4>
                    <h4>邮箱：@Model.Student.Email</h4>
                    <h4>主修科目：@Model.Student.Major.GetDisplayName()</h4>
                    <h4>入学时间：@Model.Student.EnrollmentDate.ToString("yyyy-mm-dd")</h4>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-action="Index" asp-controller="home">返回</a>
                    <a asp-controller="home" asp-action="edit" asp-route-ID="@Model.Student.EncryptedId" class="btn btn-primary">编辑</a>
                    <a href="#" class="btn btn-primary">删除</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script src="~/js/CustomScript.js"></script>
    }
</body>
</html>