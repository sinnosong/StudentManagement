@model UserClaimsViewModel

<form  method="post">
    <div class="card">
        <div class="card-header">
            <h2>管理用户声明</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input class="form-check-input" asp-for="@Model.Claims[i].IsSelected" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="card-footer">
            <input class="btn btn-primary" type="submit" value="更新" style="width:auto" />
            <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@Model.UserId" style="width:auto">取消</a>
        </div>
    </div>
</form>